<?xml version="1.0" encoding="utf-8" ?>
<Defs>

    <ThingDef Abstract="True" Name="TNA_BaseWeaponMelee">
        <thingClass>ThingWithComps</thingClass>
        <category>Item</category>
        <drawGUIOverlay>true</drawGUIOverlay>
        <altitudeLayer>Item</altitudeLayer>
        <alwaysHaulable>true</alwaysHaulable>
        <tickerType>Never</tickerType>
        <equipmentType>Primary</equipmentType>
        <useHitPoints>true</useHitPoints>
        <pathCost>10</pathCost>
        <selectable>true</selectable>
        <statBases>
            <MaxHitPoints>500</MaxHitPoints>
            <Flammability>0</Flammability>
            <DeteriorationRate>0</DeteriorationRate>
            <Beauty>5</Beauty>
            <SellPriceFactor>1.20</SellPriceFactor>
        </statBases>
        <comps>
            <li Class="CompProperties_Forbiddable"/>      
            <li>
                <compClass>CompEquippable</compClass>
            </li>
			<li>
				<compClass>CompQuality</compClass>
			</li>
        </comps>
        <graphicData>
            <onGroundRandomRotateAngle>35</onGroundRandomRotateAngle>
        </graphicData>
        <techLevel>Archotech</techLevel>
        <smeltable>false</smeltable>
        <burnableByRecipe>false</burnableByRecipe>
        <thingCategories>
            <li>WeaponsMelee</li>
        </thingCategories>
        <inspectorTabs>
            <li>ITab_Art</li>
        </inspectorTabs>
		<weaponTags>
      		<li>ArchotechGun</li>
    	</weaponTags>
    </ThingDef>

    <!--乌尔萨斯之泪-->
    <ThingDef ParentName="TNA_BaseWeaponMelee">
        <defName>TNA_TearsOfUrthas</defName>
        <label>Tears of Urthas</label>
        <techLevel>Archotech</techLevel>
        <description>The katana used by Linux only</description>
        <graphicData>
        	<texPath>Things/Weapon/Melee/TNA_TOU</texPath>
        	<graphicClass>Graphic_Single</graphicClass>
    	</graphicData>
    	<uiIconScale>1.6</uiIconScale>
    	<statBases>
        	<Mass>0.5</Mass>
        	<WorkToMake>240000</WorkToMake>
    	</statBases>
    	<equippedAngleOffset>0</equippedAngleOffset>
    	<burnableByRecipe>false</burnableByRecipe>
    	<tools>
     		<li>
        		<label>handle</label>
        		<capacities>
          			<li>Blunt</li>
        		</capacities>
        		<power>50</power>
        		<cooldownTime>1.5</cooldownTime>
      		</li>
      		<li>
        		<label>blade</label>
        		<capacities>
          			<li>Cut</li>
        		</capacities>
        		<power>200</power>
        		<cooldownTime>0.3</cooldownTime>
        		<armorPenetration>0.85</armorPenetration>
      		</li>
      		<li>
        		<label>point</label>
        		<capacities>
          			<li>Stab</li>
        		</capacities>
        		<power>500</power>
        		<cooldownTime>1.5</cooldownTime>
        		<armorPenetration>1.00</armorPenetration>
        		<chanceFactor>0.75</chanceFactor>
      		</li>
    	</tools>
    	<recipeMaker>
            <researchPrerequisite>TNA_CCS_Res</researchPrerequisite>
            <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
            <workSkill>Crafting</workSkill>
            <effectWorking>Smith</effectWorking>
            <soundWorking>Recipe_Machining</soundWorking>
            <recipeUsers>
                <li>TNA_crafttable</li>
            </recipeUsers>
            <unfinishedThingDef>UnfinishedWeapon</unfinishedThingDef>
            <skillRequirements>
                <Crafting>20</Crafting>
            </skillRequirements>
    	</recipeMaker>
    	<costList>
      		<TNA_crystal>700</TNA_crystal>
      		<TNA_crystalfiber>50</TNA_crystalfiber>
      		<ComponentSpacer>4</ComponentSpacer>
      		<Gold>20</Gold>
      		<Plasteel>200</Plasteel>
    	</costList>
  	</ThingDef>

