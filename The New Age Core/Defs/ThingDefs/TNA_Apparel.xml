<?xml version="1.0" encoding="utf-8" ?>
<Defs>

    <!--自适应装甲系统(AAS)(外套)-->
    <ThingDef ParentName="ApparelBase">
        <defName>TNA_adaptiveASCoat</defName>
        <label>adaptive armor system(coat)</label>
        <description>This armor system is programed to adapte to the environments and users' thoughts.And because of the high intellgence AI, users even have no need to speak out their porposes.\nAlough called 'Armor System', the AAS more frequently show as a self-specialized overcoat which improves your work experience.</description>
        <techLevel>Archotech</techLevel>
        <statBases>
            <MaxHitPoints>500</MaxHitPoints>
            <Flammability>0</Flammability>
            <DeteriorationRate>0</DeteriorationRate>
            <Beauty>5</Beauty>
            <EquipDelay>1.5</EquipDelay>
            <WorkToMake>120000</WorkToMake>
            <Mass>0.5</Mass>
            <StuffEffectMultiplierArmor>2</StuffEffectMultiplierArmor>
            <StuffEffectMultiplierInsulation_Cold>2</StuffEffectMultiplierInsulation_Cold>
            <StuffEffectMultiplierInsulation_Heat>2</StuffEffectMultiplierInsulation_Heat>
        </statBases>
        <recipeMaker>
            <researchPrerequisite>TNA_AAS_Res</researchPrerequisite>
            <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
            <workSkill>Crafting</workSkill>
            <effectWorking>Tailor</effectWorking>
            <soundWorking>Recipe_Tailor</soundWorking>
            <recipeUsers>
                <li>TNA_crafttable</li>
            </recipeUsers>
            <unfinishedThingDef>UnfinishedApparel</unfinishedThingDef>
        </recipeMaker>
        <burnableByRecipe>false</burnableByRecipe>
        <graphicData>
		    <texPath>Things/Apparel/TNA_AASCoat/TNA_AAS</texPath>
		    <graphicClass>Graphic_Single</graphicClass>
	    </graphicData>
	    <tradeability>Sellable</tradeability>
        <smeltable>true</smeltable>
        <thingCategories>
            <li>Apparel</li>
        </thingCategories>
        <generateCommonality>0.01</generateCommonality>
        <tickerType>Never</tickerType>
        <costStuffCount>300</costStuffCount>
        <stuffCategories>
            <li>Fabric</li>
            <li>Leathery</li>
        </stuffCategories>
        <equippedStatOffsets>
			<MoveSpeed>0.33</MoveSpeed>
            <SocialImpact>0.50</SocialImpact>
			<HuntingStealth>0.50</HuntingStealth>
            <MedicalSurgerySuccessChance>0.50</MedicalSurgerySuccessChance>
			<MedicalTendQuality>0.50</MedicalTendQuality>
            <MeleeDodgeChance>50.00</MeleeDodgeChance>
            <WorkSpeedGlobal>0.33</WorkSpeedGlobal>
            <CarryingCapacity>50</CarryingCapacity>
            <ShootingAccuracyPawn>50.00</ShootingAccuracyPawn>
            <AimingDelayFactor>-0.33</AimingDelayFactor>
            <MeleeHitChance>50.00</MeleeHitChance>
		</equippedStatOffsets>
        <apparel>
            <bodyPartGroups>
                <li>Torso</li>
                <li>Neck</li>
                <li>Shoulders</li>
                <li>Arms</li>
                <li>Legs</li>
            </bodyPartGroups>
            <wornGraphicPath>Things/Apparel/TNA_AASCoat/TNA_AAS</wornGraphicPath>
            <layers>
                <li>Shell</li>
            </layers>
        </apparel>
    </ThingDef>

